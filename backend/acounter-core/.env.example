# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
ENVIRONMENT=development

# JWT Authentication
JWT_SECRET=your_secret_key_here_make_it_long_and_complex
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION_SECS=60

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Database (not used in initial implementation, but prepared for future)
DATABASE_URL=postgres://postgres:password@localhost:5432/acounter

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id_from_google_cloud_console
GOOGLE_CLIENT_SECRET=your_client_secret_from_google_cloud_console
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback